    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Plataforma</th>
                <th>Gênero</th>
                <th>Ano de Lançamento</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <%
                Connection con = DriverManager.getConnection("jdbc:mysql://localhost:3306/jogosdb", "root", "");
                Statement stmt = con.createStatement();
                ResultSet rs = stmt.executeQuery("SELECT * FROM jogos");
                while (rs.next()) {
            %>
            <tr>
                <td><%= rs.getInt("id") %></td>
                <td><%= rs.getString("nome") %></td>
                <td><%= rs.getString("plataforma") %></td>
                <td><%= rs.getString("genero") %></td>
                <td><%= rs.getInt("ano_lancamento") %></td>
                <td>
                    <a href="edit_jogo.jsp?id=<%= rs.getInt("id") %>" class="btn btn-warning">Editar</a>
                    <a href="delete_jogo.jsp?id=<%= rs.getInt("id") %>" class="btn btn-danger">Excluir</a>
                </td>
            </tr>
            <%
                }
                con.close();
            %>
        </tbody>
    </table>
